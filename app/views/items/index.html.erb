<h1>Listing items</h1>

<table>
  <thead>
    <tr>
      <th>Partida</th>
      <th>Unidad medida</th>
      <th>Codigo</th>
      <th>Nombre</th>
      <th>Unidad medida</th>
      <th>Foto file name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.partida %></td>
        <td><%= item.unidad_medida %></td>
        <td><%= item.codigo %></td>
        <td><%= item.nombre %></td>
        <td><%= item.unidad_medida %></td>
        <td><%= item.foto_file_name %></td>
        <td><%= link_to 'Show', item %></td>
        <td><%= link_to 'Edit', edit_item_path(item) %></td>
        <td><%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

