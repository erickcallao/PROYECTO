<h1>Listing stocks</h1>

<table>
  <thead>
    <tr>
      <th>Almacen</th>
      <th>Item</th>
      <th>Cantidad</th>
      <th>Valor inventario</th>
      <th>Activo</th>
      <th>Estado</th>
      <th>Accion</th>
      <th>Fecha vencimiento</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @stocks.each do |stock| %>
      <tr>
        <td><%= stock.almacen %></td>
        <td><%= stock.item %></td>
        <td><%= stock.cantidad %></td>
        <td><%= stock.valor_inventario %></td>
        <td><%= stock.activo %></td>
        <td><%= stock.estado %></td>
        <td><%= stock.accion %></td>
        <td><%= stock.fecha_vencimiento %></td>
        <td><%= link_to 'Show', stock %></td>
        <td><%= link_to 'Edit', edit_stock_path(stock) %></td>
        <td><%= link_to 'Destroy', stock, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

